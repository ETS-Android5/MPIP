<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context="com.example.bright.trackmenew.SearchFragment">

    <ImageView
        android:id="@+id/pp1"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="#65DCE5"/>

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="150dp"
        android:layout_height="148dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="33dp"
        android:padding="3dp"
        android:src="@drawable/imageedit_4_8938509381" />

    <EditText
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:fontFamily="sans-serif-light"
        android:hint="User"
        android:textColor="#FFFFFF"
        android:background="@null"
        android:textSize="32sp" />


    <EditText
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:background="@null"
        android:hint="New York,USA"
        android:textAllCaps="true"
        android:textColor="#2F7092"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_below="@+id/pp1"
        android:background="#65DCE5"

        />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:id="@+id/qq1"
        android:layout_below="@+id/pp1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#63C9FF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="70dp"
        android:text="followers"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="300dp"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="270dp"
        android:text="following"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/qq1"
        android:id="@+id/qq2"
        android:paddingTop="40dp"
        android:paddingLeft="40dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#3797CF"
        android:textSize="13sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qq2"
        android:paddingLeft="40dp"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="10dp"
        android:hint="user@gmail.com"
        android:background="@null"
        android:id="@+id/qq3"
        android:textColor="#000000"
        android:textSize="18sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/qq3"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/qq3"
        android:id="@+id/qq4"
        android:paddingTop="40dp"
        android:paddingLeft="40dp"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textColor="#3797CF"
        android:textSize="13sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qq4"
        android:paddingLeft="40dp"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="10dp"
        android:hint="+389-00-000-000"
        android:background="@null"
        android:id="@+id/qq5"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/qq5"
        android:id="@+id/ww1"
        android:layout_marginTop="15dp"
        android:background="#E5E5E5" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_below="@+id/ww1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="50dp"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/sign_in_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
 />



</RelativeLayout>
